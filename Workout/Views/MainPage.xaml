<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Workout.MainPage"
             BackgroundColor="Black">
<!-- remember to add chaos stars  later -->
    <VerticalStackLayout Padding="30" Spacing="25">

        <Label Text="Welcome to CHAOS Workouts!"
               FontSize="28"
               TextColor="Gold"
               HorizontalOptions="Center"/>

        <Button Text="Goals Page"
                BackgroundColor="Gold"
                TextColor="Black"
                FontSize="22"
                HeightRequest="60"
                Clicked="OnGoalsClicked" />

        <Button Text="Workout Page"
                BackgroundColor="Gold"
                TextColor="Black"
                FontSize="22"
                HeightRequest="60"
                Clicked="OnWorkoutClicked" />

        <Button Text="Dietary Page"
                BackgroundColor="Gold"
                TextColor="Black"
                FontSize="22"
                HeightRequest="60"
                Clicked="OnDietaryClicked" />
    </VerticalStackLayout>
</ContentPage>
